<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>
		{% block title %}Sortir
		{% endblock %}
	</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
	<link href="{{ asset('css/Style.css') }}" rel='stylesheet'>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;">
	<div class="container-fluid">
		<a class="navbar-brand" href=" {{ path('accueil') }} "><img class="header_img" src="{{ asset('img/logo.png') }}"></a>
		<a class="navbar-brand" href=" {{ path('accueil') }} ">Sortir.com</a>
		<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse " id="navbarNav">
			{% set route_name = app.request.attributes.get('_route')%}
			<ul class="navbar-nav ms-auto mb-2 mb-lg-0">
				{% if is_granted('ROLE_ADMIN') %}
					<li class="nav-item dropdown">
						<a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
							Admin
						</a>
						<ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
							<li class="nav-item">
								<a class="dropdown-item" href=" {{ path('villes') }} ">Villes</a>
							</li>
							<li class="nav-item">
								<a class=" dropdown-item" href=" {{ path('sites') }} ">Sites</a>
							</li>
							<li class="nav-item">
								<a class="k dropdown-item" href=" {{ path('inscription') }} ">Créer un utilisateur</a>
							</li>
						</ul>
					</li>
				{% endif %}
				<li class="nav-item">
					<a class="nav-link  {% if route_name == 'accueil' %}active{% endif %} " href=" {{ path('accueil') }} ">Accueil</a>
				</li>
				{% if app.user %}
					<li class="nav-item">
						<a class="nav-link  {% if route_name == 'profil' %}active{% endif %} " href=" {{ path('profil') }} ">Mon profil</a>
					</li>
					<li class="nav-item">
						<a class="nav-link {% if route_name == 'app_logout' %}active{% endif %}" href="{{ path('app_logout') }}">Se déconnecter</a>
					</li>
				{%  endif %}
				{% if not app.user %}
					<li class="nav-item">
						<a class="nav-link {% if route_name == 'app_login' %}active{% endif %}" href="{{ path('app_login') }}">Se connecter</a>
					</li>
				{% endif %}
			</ul>
		</div>
	</div>
</nav>
{% block body %}{% endblock %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
</body>
</html>
