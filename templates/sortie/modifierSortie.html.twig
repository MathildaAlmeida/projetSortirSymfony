{% extends 'base.html.twig' %}

{% block title %}Hello SortieController!{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col text-center">
                <h1 class="title">Modifier une sortie</h1>
            </div>
        </div>
        <br>
        {{ form_start(form) }}
        <div class="row">
            <div class="col-6">
                <!--debut template -->
                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Nom de la sortie : </label>
                    <div class="col-sm-8">
                        {{ form_widget(form.nom,{'attr': {'class':'form-control','onchange':'infoslieux()'}}) }}
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label"> Date et heure de la sortie</label>
                    <div class="col-sm-8">
                        {{ form_widget(form.dateDebut,{'attr': {'class':'form-control','onchange':'infoslieux()'}}) }}
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Date limite d'incription</label>
                    <div class="col-sm-8">
                        {{ form_widget(form.dateCloture,{'attr': {'class':'form-control','onchange':'infoslieux()'}}) }}
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Nombre de place : </label>
                    <div class="col-sm-8">
                        {{ form_widget(form.nbInscriptionMax,{'attr': {'class':'form-control','onchange':'infoslieux()'}}) }}
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Dur√©e : </label>
                    <div class="col-sm-8">
                        {{ form_widget(form.duree,{'attr': {'class':'form-control','onchange':'infoslieux()'}}) }}
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label"> Description et infos : </label>
                    <div class="col-sm-8">
                        {{ form_widget(form.descriptionInfos,{'attr': {'class':'form-control','onchange':'infoslieux()'}}) }}
                    </div>
                </div>


            </div>
            <div class="col-6">
                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Ville organisatrice </label>
                    <div class="col-sm-8">
                        <strong class="form-control bg-light">{{ app.user.nosite.nomsite }}</strong>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Ville : </label>
                    <div class="col-sm-8">
                        <select id="idville" class="form-control" onchange="lieux()">
                            {% for ville in villes %}
                                <option value="{{ ville.id }}">{{ ville.nomVille }} | {{ ville.codePostal }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>

                <div class="row mb-3" >
                    <label class="col-sm-4 col-form-label">{{ form_label(form.noLieu) }}</label>
                    <div class="col-sm-8">
                        {{ form_widget(form.noLieu,{'attr': {'class':'form-control','onchange':'infoslieux()'}}) }}
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Rue : </label>
                    <div class="col-sm-8">
                        <strong class="form-control bg-light" id="rue"></strong>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Latitude : </label>
                    <div class="col-sm-8">
                        <strong class="form-control bg-light" id="latitude"></strong>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Longitude : </label>
                    <div class="col-sm-8">
                        <strong class="form-control bg-light" id="longitude"></strong>
                    </div>
                </div>

            </div>
        </div>
    </div>

    

    <div class="row">
        <div class="col text-center">
            <button type="submit" class="btn btn-sm btn-primary" > Enregistrer</button>
            <a href="{{ path('sortie_publier',{ id:sortie.id }) }}" class="btn btn-sm btn-primary"> Publier la sortie</a>
            <a  href="{{ path('sortie_supprimer',{ id:sortie.id }) }}" class="btn btn-sm btn-primary"> Supprimer la sortie</a>
            <a href="{{ path('accueil')}}" class="btn btn-sm btn-primary">Annuler</a>
        </div>
    </div>

        {{ form_end(form) }}
    </div>
{% endblock %}

