{% extends 'base.html.twig' %}

{% block title %}Hello ProfilController!{% endblock %}

{% block body %}
	<div class="d-flex justify-content-center" >
		 {{ form_start(form) }}
        

		<div class="form-group row" >
		
			<label >Pseudo : * </label>
  			<div class="col">{{ form_widget(form.pseudo) }}	</div>
  			
  			<label > Nom : * </label>
  			<div class="col">{{ form_widget(form.nom) }}</div>
			
		</div>
		
		<div class=" form-group row">
		
			<label > Prénom : *</label>
  			<div class="col">{{ form_widget(form.prenom) }}</div>
			
			<label > Email : * </label>
			<div class="col"> {{ form_widget(form.email) }}	</div>

			<label> Téléphone : </label>
  			<div class="col">	 {{ form_widget(form.telephone) }}	</div>		

			<label> Site de rattachement : * </label>
  			<div class="col">	 {{ form_widget(form.noSite) }}	</div>	
				
		</div>

		<div class="form-group row">
			
			<label> {{form_label(form.password.first)}} *</label>
  			<div class="col"> {{ form_widget(form.password.first) }}</div>
			
			<label>{{form_label(form.password.second)}} *</label>
			<div class="col">{{ form_widget(form.password.second) }} </div>

			
				{{ form_errors(form.password) }} 

		</div>
		<p> * Champs obligatoires </p>
		
		
		<div class="gap-2 col-6 mx-auto">
	  		<button type="submit" class="btn btn-lg btn-outline-dark" > S'inscrire</button>
	  	
			<a href="{{ path('acceuil')}}" class="btn btn-lg btn-outline-dark">Annuler</a>
		</div>

		</div>
        {{ form_end(form) }}
    </div>

{% endblock %}