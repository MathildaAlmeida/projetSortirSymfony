{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
	<div class="d-flex justify-content-center" >
		
		 {{ form_start(form) }}
        <h1> Créer un utilisateurs  </h1>
		{% for error in errors %}
		<div class="alert alert-danger">
			
				{{ error.message }}
			
		</div>
{% endfor %}
		<div class="form-group row" >
		
			<label class="col-sm-2 col-form-label" >Pseudo : * </label>
  			<div class="col-sm-10">{{ form_widget(form.pseudo) }}	</div>
  			
  			<label class="col-sm-2 col-form-label" > Nom : * </label>
  			<div class="col-sm-10">{{ form_widget(form.nom) }}</div>
			
		</div>
		
		<div class=" form-group row">
		
			<label class="col-sm-2 col-form-label"> Prénom : *</label>
  			<div class="col-sm-10">{{ form_widget(form.prenom) }}</div>
			
			<label class="col-sm-2 col-form-label" > Email : * </label>
			<div class="col-sm-10"> {{ form_widget(form.email) }}	</div>
			

			<label class="col-sm-2 col-form-label"> Téléphone : </label>
  			<div class="col-sm-10">	 {{ form_widget(form.telephone) }} </div>	

			<label class="col-sm-2 col-form-label"> Site de rattachement : * </label>
  			<div class="col-sm-10">	 {{ form_widget(form.noSite) }}	</div>	
				
		</div>

		<div class="form-group row">
			
			<label class="col-sm-2 col-form-label"> {{form_label(form.password.first)}} *</label>
  			<div class="col-sm-10"> {{ form_widget(form.password.first) }} </div>
			
			<label class="col-sm-2 col-form-label">{{form_label(form.password.second)}} *</label>
			<div class="col-sm-10">{{ form_widget(form.password.second) }} </div>

			
		</div>
		<p> * Champs obligatoires </p>
		
		<div class="gap-2 col-6 mx-auto">
	  		<button type="submit" class="btn btn-lg btn-outline-dark" > S'inscrire</button>
	  	
			<a href="{{ path('accueil')}}" class="btn btn-lg btn-outline-dark">Annuler</a>
		</div>

		</div>
        {{ form_end(form) }}
    </div>

{% endblock %}