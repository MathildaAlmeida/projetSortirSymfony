{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
<div class="container">
	<div class="row">
		<div class="col justify-content-center">
			<h1 class="title">Créer une Sortie</h1>
		</div>
	</div>

	<div class="bloc">
		<p>PHOTO</p>
	</div>

		 {{ form_start(form) }}        
			{% for error in errors %}
				<div class="alert alert-danger">			
					{{ error.message }}			
				</div>
			{% endfor %}
			<div class="row divForm">
            	<div class="col-8">

					<div class="row mb-3">		
						<label class=" col-sm-4 col-form-label" >Pseudo :  </label>
						<div class="col-sm-8">
							{{ form_widget(form.pseudo) }}
						</div>
					</div>
					
					<div class="row mb-3">					
						<label class="col-sm-4 col-form-label" > Nom :  </label>
						<div class="col-sm-8">
							{{ form_widget(form.nom) }}
						</div>
					</div>		
					
					<div class="row mb-3">					
						<label class="col-sm-4 col-form-label"> Prénom : </label>
						<div class="col-sm-8">
							{{ form_widget(form.prenom) }}
						</div>
					</div>	
					
					<div class="row mb-3">
						<label class="col-sm-4 col-form-label" > Email :  </label>
						<div class="col-sm-8">
							{{ form_widget(form.email) }}
						</div>
					</div>
					
					<div class="row mb-3">
						<label class="col-sm-4 col-form-label"> Téléphone : </label>
						<div class="col-sm-8">
							{{ form_widget(form.telephone) }} 
						</div>
					</div>	
					
					<div class="row mb-3">
						<label class="col-sm-4 col-form-label"> Site de rattachement : </label>
						<div class="col-sm-8">
							{{ form_widget(form.noSite) }}
						</div>
					</div>	

					<div class="row mb-3">							
						<label class="col-sm-4 col-form-label"> {{form_label(form.password.first)}} </label>
						<div class="col-sm-8">
							{{ form_widget(form.password.first) }}
						</div>
					</div>
					
					<div class="row mb-3">					
						<label class=" col-sm-4 col-form-label">{{form_label(form.password.second)}} </label>
						<div class="col-sm-8">
							{{ form_widget(form.password.second) }} 
						</div>
					</div>
					
					<div class="row mb-3">
						<label class="col-sm-4 col-form-label">Ma photo : </label>
						<div class="col-sm-8">
							<input type="button" class="btn btn-sm btn-outline-dark" value="Télecharger vers le serveur"/> 
						</div>
					</div>			
	
		
					<div class=" gap-2 col-6 mx-auto">
						<button type="submit" class="btn btn-sm  btn-outline-dark" > Enregistrer</button>	  	
						<a href="{{ path('accueil')}}" class="btn btn-sm  btn-outline-dark">Annuler</a>
					</div>
            </div>
        </div>		
        {{ form_end(form) }}
    
</div>

{% endblock %}
