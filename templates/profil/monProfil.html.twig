{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
<div class="d-flex justify-content-center" >
	<h1 class="titre"> Mon profil  </h1> </br>
</div>
	<div class="bloc">
		<p>PHOTO</p>
	</div>

	<div class="d-flex justify-content-center divForm" >
		
		 {{ form_start(form) }}        
		{% for error in errors %}
		    <div class="alert alert-danger">			
				{{ error.message }}			
		    </div>
        {% endfor %}
		
		<div class="row">
		<div class="form-group col align-items-center" >		
			<label class=" " >Pseudo :  </label>
  			<div class="">{{ form_widget(form.pseudo) }}</div>
		</div>
		</div>

		<div class="row">
		<div class="form-group col align-items-center" >  			
  			<label class="" > Nom :  </label>
  			<div class="">{{ form_widget(form.nom) }}</div>			
		</div>
		</div>
		
		<div class="row">
		<div class=" form-group col align-items-center">		
			<label class=""> Prénom : </label>
  			<div class="">{{ form_widget(form.prenom) }}</div>			  
		</div>
		</div>

		<div class="row">
		<div class="form-group col align-items-center" >
			<label class="" > Email :  </label>
			<div class=""> {{ form_widget(form.email) }}	</div>
		</div>
		</div>

		<div class="row">
		<div class="form-group col align-items-center" >
			<label class=""> Téléphone : </label>
  			<div class="">{{ form_widget(form.telephone) }} </div>	
		</div>
		</div>

		<div class="row">
		<div class="form-group col  align-items-center">
			<label class=""> Site de rattachement : </label>
  			<div class="">	{{ form_widget(form.noSite) }}	</div>				
		</div>
		</div>

		<div class="row">
		<div class="form-group col align-items-center">			
			<label class=""> {{form_label(form.password.first)}} </label>
  			<div class=""> {{ form_widget(form.password.first) }} </div>
		</div>
		</div>

		<div class="row">
		<div class="form-group col align-items-center" >			
			<label class=" ">{{form_label(form.password.second)}} </label>
			<div class="">{{ form_widget(form.password.second) }} </div>
		</div>
		</div>

		<div class="row">
		<div class="form-group col align-items-center" >
            <label class="">Ma photo : </label>
			<div class=""> <input type="button" class="btn btn-sm btn-outline-dark" value="Télecharger vers le serveur"/> </div>			
		</div>
		</div>
		
		<div class=" row align-items-center">
			<div class="col-xs-6 text-left">
	  			<button type="submit" class="btn btn-sm  btn-outline-dark" > Enregistrer</button>	
			</div>
			<div class="col-xs-6 text-right">  	
				<a href="{{ path('accueil')}}" class="btn btn-sm  btn-outline-dark">Annuler</a>
			</div>
		</div>

		
        {{ form_end(form) }}
    </div>

{% endblock %}
