{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col justify-content-center">
				<h1 class="title">Mon profil</h1>
			</div>
		</div>
		<div class="row">
			<div class="image col-6">
				<div class="bloc">
					<img src="" class="img-fluid" alt="...">
				</div>
			</div>
			<div class="col">
				{{ form_start(form) }}
				{% for error in errors %}
					<div class="alert alert-danger">
						{{ error.message }}
					</div>
				{% endfor %}

				<div class="mb-3">
					<label class="form-label" >Pseudo :  </label>
					{{ form_widget(form.pseudo,{'attr': {'class':'form-control'}}) }}
				</div>

				<div class="mb-3">
					<label class="form-label" > Nom :  </label>
					{{ form_widget(form.nom,{'attr': {'class':'form-control'}}) }}
				</div>

				<div class="mb-3">
					<label class="form-label"> Prénom : </label>
					{{ form_widget(form.prenom,{'attr': {'class':'form-control'}}) }}
				</div>

				<div class="mb-3">
					<label class="form-label" > Email :  </label>
					{{ form_widget(form.email,{'attr': {'class':'form-control'}}) }}
				</div>

				<div class="mb-3">
					<label class="form-label"> Téléphone : </label>
					{{ form_widget(form.telephone,{'attr': {'class':'form-control'}}) }}
				</div>

				<div class="mb-3">
					<label class="form-label"> Site de rattachement : </label>
					{{ form_widget(form.noSite,{'attr': {'class':'form-control'}}) }}
				</div>

				<div class="mb-3">
					<label class="form-label"> {{form_label(form.password.first)}} </label>
					{{ form_widget(form.password.first,{'attr': {'class':'form-control'}}) }}

				</div>

				<div class="mb-3">
					<label class="form-label">{{form_label(form.password.second)}} </label>
					{{ form_widget(form.password.second,{'attr': {'class':'form-control'}}) }}
				</div>

				<div class="mb-3">
					<label class="form-label">Ma photo : </label>
					<input type="button" class="btn btn-sm btn-outline-dark" value="Télecharger vers le serveur"/>
				</div>
			</div>
			<div class="row">
				<div class="col text-center">
					<button type="submit" class="btn btn-primary" > Enregistrer</button>
					<a href="{{ path('accueil')}}" class="btn btn-primary">Annuler</a>
				</div>
			</div>
			{{ form_end(form) }}
		</div>
	</div>

{% endblock %}
